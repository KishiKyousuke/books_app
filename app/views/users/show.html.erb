<h1><%= t('devise.registrations.show.profile', {name: @user.name}) %></h1>

<h3><%= t('devise.registrations.show.avatar') %></h3>
<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar.variant(resize_to_fill: [150, 150])%>
<% else %>
  <p>画像がありません</p>
<% end %>

<h3><%= t('devise.registrations.show.address') %></h3>
<p>〒<%= @user.postal_code %> <%= @user.address %></p>

<h3><%= t('devise.registrations.show.introduction')%></h3>
<%= @user.introduction %>
<br />

<p><%= link_to t('view.relationship.link.follows'), follows_user_path(@user.id) %></p>
<p><%= link_to t('view.relationship.link.followers'), followers_user_path(@user.id) %></p>

<br />
<% if @user != current_user %>
    <% if @user.followed_by?(current_user) %>
      <%= link_to t('view.relationship.link.followed'), user_relationships_path(@user.id), method: :delete %>
    <% else %>
      <%= link_to t('view.relationship.link.follow'), user_relationships_path(@user.id), method: :post  %>
    <% end %>
<% end %>

<br />
<%= link_to t('view.common.link.back'), books_path %>
