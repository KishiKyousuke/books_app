<h1><%= t('view.common.page_title.books') %></h1>

<%= page_entries_info @books %>

<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th><%= Book.human_attribute_name(:picture) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('view.common.link.show'), book %></td>
        <td><%= link_to t('view.common.link.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('view.common.link.destroy'), book, method: :delete, data: { confirm: t('view.common.confirm.destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @books %>
<br>

<%= link_to t('view.common.link.new'), new_book_path %>
